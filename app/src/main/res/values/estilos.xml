<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="estiloBoton">
        <item name="android:background">@drawable/fondoboton</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">3dp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="estiloTextView">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/textoTextView</item>

    </style>

    <style name="estiloEditText">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/textoEditText</item>
    </style>

    <style name="estiloCheckbox">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/textoCheckbox</item>
    </style>

    <style name="estiloListviewTextview">
        <item name="android:textSize">25dp</item>
        <item name="android:background">@color/fondoListview</item>
        <item name="android:textColor">@color/textoListview</item>
    </style>


</resources>